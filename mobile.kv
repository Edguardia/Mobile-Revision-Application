#WindowManager houses all the screens and allows for changing between them
WindowManager:
    LoginScreen:
    MainSelectScreen:
    FailedAuthentication:
    AddQuestionScreen:
    DeleteQuestionScreen:
    AnsweringScreen:
    ErrorScreen:

#LoginScreen has a button and two inputs for your username and password
<LoginScreen>:
    name: "LoginScreen"
    BoxLayout:
        
        
        spacing: '0'
        position_hint: {'center_x':0.5, 'center_y':0.5}
        orientation: 'vertical'

        Label:
            
            text: "Username"
            font_size: 25
            size: self.texture_size
            
        TextInput:
            id: UsernameBox
            width: 100
            height: 50
            text: "Enter Username"
            
        Label:
            
            text: "Password"
            font_size: 25
            size: self.texture_size
            
        TextInput:
            
            width: 100
            height: 50
            text: "Enter Password"
            id: PasswordBox 

        Button:
            
            text: "Submit"
            font_size: 25
            size: self.texture_size
            on_press:
                root.login()
                

        

#MainSelectScreen has buttons for each screen you may want to go to.
<MainSelectScreen>:
    name: "MainSelectScreen"
    BoxLayout:
        spacing: '0'
        position_hint: {'center_x':0.5, 'center_y':0.5}
        orientation: 'vertical'
        Label:
            text: "Main Select"

        Button:
            text:"Answer Questions"
            on_press: root.answerQuestion()
                

        Button:
            text:'Add Question'
            on_press: root.addQuestion() 

        Button:
            text: "Delete Question"
            on_press: root.delQuestion()

#AddQuestionScreen supports a box for your question, its answer and then a submit.
<AddQuestionScreen>:
    name: "AddQuestionScreen"
    BoxLayout:
        spacing: '0'
        position_hint: {'center_x':0.5, 'center_y':0.5}
        orientation: 'vertical'
        Label:
            text:'What is the question?'
        TextInput:
            id: QuestionBox
            width: 100
            height: 50
            text: "Enter Question"
            

        Label:
            text: "What is the answer"
        TextInput:
            id: AnswerBox
            width: 100
            height: 50
            text:'Enter Answer'
            

        Button:
            text: 'Submit'
            on_press: root.uploadQuestion()

<DeleteQuestionScreen>:
    name: "DeleteQuestionScreen"
	BoxLayout:
        spacing: '0'
        position_hint: {'center_x':0.5, 'center_y':0.5}
        orientation: 'vertical'
        Label:
            text: "Delete"

		Spinner:
            id:spinner
            text: "Select Question"
        
        Button:
            bold: True
            text:"Delete Question"
            size: self.texture_size
            on_press:root.deleteQuestions()

<AnsweringScreen>:
    name: "AnsweringScreen"
    BoxLayout:
        spacing: '0'
        position_hint: {'center_x':0.5, 'center_y':0.5}
        orientation: 'vertical'
        Label:
            id: questiontoAnswer
            text: "Refresh"
        GridLayout:
            rows:2
            cols:2
            padding:10
            spacing:10
            Button:
                id: answer0
                on_press: root.checkAns("0")
            Button:
                id: answer1
                on_press: root.checkAns("1")
            Button:
                id: answer2
                on_press: root.checkAns("2")
            Button:
                id: answer3
                on_press: root.checkAns("3")

        
<ErrorScreen>:
    BoxLayout:
        spacing: '0'
        position_hint: {'center_x':0.5, 'center_y':0.5}
        orientation: 'vertical'
        Label:
            text:"Error, Please Restart Application"
    
        

<FailedAuthentication>
    name: "FailedAuthentication"

    BoxLayout:
        orientation: "vertical"
        Label:
            text: "Incorrect Username or Password, Please try again"

